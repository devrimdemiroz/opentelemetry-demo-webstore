{	

    "name": "OpenTelemetry demo - Fork Devrim",
	"postCreateCommand": "cd /workspaces/opentelemetry-demo-webstore && npm install && docker compose up --no-build",
	"forwardPorts": [8080, 9090, 49153, 16686, 4317, 49156, 49173],
	// make 8080 , 9090 public by default
	
	"portsAttributes": {
		"8080": {
			"label": "OpenTelemetry Collector",
			"onAutoForward": "notify",
			"onOpen": "open-preview"
		},
		"9090": {
			"label": "Prometheus",
			"onAutoForward": "notify"
		}
	},


	"extensions": [
		"ms-vscode.github-co-pilot",
		"ms-azuretools.vscode-docker",
		"ms-vscode-remote.remote-containers",
		"ms-vscode-remote.remote-ssh-explorer",
		"ms-vscode-remote.vscode-remote-extensionpack",
		"ms-vscode.js-debug-companion",
		"ms-vscode.js-debug-nightly",
		"ms-vscode.vscode-js-profile-table"
	]
}
